<form action="" method="post" accept-charset="utf-8" enctype="multipart/form-data">
  <div class="field">
    <label for="title">Title:</label>
    <input type="text" name="title" value="<%= @post.title %>" id="title" />
  </div>
  <div class="field">
    <label for="tags">Tags:</label>
    <input type="text" name="tags" value="<%= @post.tags %>" id="tags" />
  </div>
  <div class="area">
    <label for="body">Body:</label>
    <textarea name="body" rows="20" cols="40"><%= @post.body %></textarea>
  </div>
  <div class="field">
    <label for="attachment">Attach:</label>
    <input type="file" name="attachment" value="" id="attachment" />
  </div>
  <div class="buttons">
    <input type="submit" value="Save" accesskey="s" />
    <div class="admin"><%= link_to 'Cancel', :back, :accesskey => 'c' %></div>
  </div>
</form>
<script type="text/javascript" charset="utf-8">
  document.forms[0].title.focus();
  document.forms[0].title.select();  
</script>

