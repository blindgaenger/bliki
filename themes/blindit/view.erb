<div class="<%= @post.class.to_s.downcase %>">
  <h2 class="title"><%= @post.title %></h2>
  <small>posted on <%= @post.date %>, filed under <%= tag_list @post.tags, '', '' %></small>
  <div class="body">
    <%= @post.content %>
  </div>
  <%= disqus if Sinatra.options.use_comments %>
</div>

<% if @post.is_a? Post %>
  <div><%= @post.attachments.size %> Attachments</div>
  <ul>
  <% for attachment in @post.attachments %>
      <li><%= link_to attachment.name, attachment.link %></li>
  <% end %>
  </ul>
<% end %>

<div class="buttons">
  <a href="/new" accesskey="n">New</a>
  <a href="<%= @post.edit_link %>" accesskey="e">Edit</a>
</div>

